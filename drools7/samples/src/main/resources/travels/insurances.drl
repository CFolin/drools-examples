rule "NoneInsuranceUpgrade"
    dialect "mvel"
    when
        Reservation(flightInsurance == true)
        Customer(loyaltyLevel == "None")
    then
        insertLogical(new InsuranceFee(35.00));
end

query "getInsuranceFees"
    Fee: InsuranceFee();
end