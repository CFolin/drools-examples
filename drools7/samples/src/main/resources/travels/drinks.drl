package travels;

import com.sample.travel.domain.Reservation;
import com.sample.travel.domain.Customer;
import com.sample.travel.domain.DrinkFee;



rule "GoldDrinksUpgrade"
    dialect "mvel"
    when
        Reservation(drinkUpgrade == true)
        Customer(loyaltyLevel == "Gold")
        Customer(age >= 21)
    then
        insertLogical(new DrinkFee(10.00));
end

rule "SilverDrinksUpgrade"
    dialect "mvel"
    when
        Reservation(drinkUpgrade == true)
        Customer(loyaltyLevel == "Silver")
        Customer(age >= 21)
    then
        insertLogical(new DrinkFee(15.00));
end

rule "BronzeDrinksUpgrade"
    dialect "mvel"
    when
        Reservation(drinkUpgrade == true)
        Customer(loyaltyLevel == "Bronze")
        Customer(age >= 21)
    then
        insertLogical(new DrinkFee(20.00));
end

query "getDrinksFees"
    Fee: DrinkFee();
end